getwmname() {
    xprop |awk '/WM_CLASS/{print $4}'
}

# return coordinates in the form 
# x y 0 0
# use head and tail to get x and y
getcurpos() {
    xdotool getmouselocation | egrep -oh "[0-9]+" | head -n 2
}

