#
# bspwm hotkeys
#

# Exit bspwm
super + alt + Escape
	bspc quit

# close current node
super + {_,alt} + w
	bspc node {-c,-k}

#toggle monocle
super + t
	bspc desktop -l next

super + ctrl + alt + p
	bspc node -t \~pseudo_tiled

super + shift + t
	bspc node -t \~pseudo_tiled

#equalize area
super + b
	bspc node @/ -B 

super + {s,f}
	bspc node -t \~{floating,fullscreen}

super + shift + s
  bspc node -g sticky

#super + {grave,Tab}
#	bspc {node,desktop} -f last

#last node
super + {o,i}
	bspc control --record-history off; \
	bspc desktop {older,newer} -f; \
	bspc control --record-history on

super + m
	bspc node -s biggest.local

#flip desktop
super + shift + {_, ctrl} + space
	bspc node @/ -F {vertical, horizontal}

super + {_, shift} + r
	bspc node @{/,parent} -R 90

#balance desktop


# super + shift + hjkl = move node to
# super + hjkl = move to node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#circulate the nodes of the desktop
super + {comma,period}
	bspc node -f {prev,next}.local

#Move through desktops
super + {Left,Right}
	bspc desktop -f {prev,next}.local

super + Tab
  bspc desktop -f last


# @Move troughmonitors
super + shift + {Left,Right}
	bspc monitor -f {prev,next}

#split node in
super + ctrl + {h,j,k,l}
	bspc node -p \~{west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}
	
#resize node 1
super + alt + {Left,Down,Up,Right}
	bspc node -v {-15 0, 0 15, 0 -15, 15 0}

#resize node 2
super + alt + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,bottom 0 -10,left +10 0}
super + shift + alt + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,top 0 -10,right +10 0}

#set split ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

#move node to desktop
#super + {_,shift,alt}+{1-9,0}
#bspc {desktop -f,node -d} ^{1-9,10}

super + {_,alt} + {_,shift} + {grave,1-9,0}
	bspc {desktop -f,node -d} "{_,2:}^$(( {0,1-9,10} + 1))"

# focus the last node/desktop
super + {grave,Tab}
bspc {node,desktop} -f last

super + alt + {_,shift} + {grave,1-9,0}
	bspc node -d "{1-2}:^$(( {0,1-9,10} + 1))"

super + shift + {o,p}
	bspc desktop -R {270,90}


super + ctrl + {Left,Down,Up,Right}
	bspc node -p {\~west,\~south,\~north,\~east}

# Change node gap
super + {minus,plus}
    bspc config -d focused node_gap $((`bspc config -d focused node_gap` {+,-} 2 )) 

lock + minus
    bspc config -d focused node_gap $((`bspc config -d focused node_gap` + 2 )) 


# un/hide currently active node
super + {_,shift} + u
    ~/.config/bspwm/misc/toggle {hide,show}
    
# wm independent hotkeys
super + alt + w; o
  bin/util/open_weechat_ssh_url.sh

#lock 
{super + shift + Delete,XF86ScreenSaver}
  bin/util/lock

#un/hide conky
super + q
	bin/show_conky.sh

# toggle italian|dvorak keyboard layout
super + Insert
  ~/bin/util/toggle_dvorak.sh

shift + Shift_R
  ~/bin/util/toggle_dvorak.sh

super + Return
  urxvt

super + apostrophe
        ~/bin/quake/quake-urxvt "quake-weechat" "quake-weechat-create"

super + {ctrl,shift} + Return
        ~/bin/quake/quake-urxvt

super + semicolon
        ~/bin/quake/quake-urxvt
super + shift + semicolon
        ~/bin/quake/quake-urxvt-newtab

super + space
        ~/bin/dmenu/launcher
super + {_,shift} + a
        ~/bin/dmenu/pass_menu.sh {_,--type}
super  + {_,shift} + v
        ~/bin/dmenu/clipboard_menu.sh {_,--type}
super + c
        xcalc
super + p
        ~/bin/dmenu/power_menu.sh

super + z
    dunstctl history-pop

super + e
	~/bin/em &

super + shift + e
	killall empty

super + {F12,F11}
  ~/bin/panel/dzen2/popup "Volume: $(ponymix {increase,decrease} 5)%" 1

XF86MonBrightness{Up,Down}
  xbacklight {+,-} 10 && PERCENT=$(xbacklight | grep -o "[0-9]*" | head -n 1) && ~/bin/panel/dzen2/popup "Brightness: $PERCENT%" 1

XF86Audio{Raise,Lower}Volume
  #amixer -q set Master 5%{+,-}
  change_volume.sh {increase, decrease} 5

XF86AudioMute
  pamixer -t

XF86AudioPlay
  mpc toggle

XF86AudioPrev
  mpc previous

XF86AudioNext
  mpc next

XF86AudioStop
  mpc stop

Pause
  mpc toggle

@Print
  scrot -e 'mv $f ~/shots'

@shift + Print
  scrot -s -e 'mv $f ~/shots'

# make sxhkd and panel reload its configuration files:
super + Escape
       pkill -USR1 -x sxhkd; \
       killall panel; \
       panel 2>&1 >/dev/null &

super + shift + Escape
    xrandr --auto

ctrl + F1
	google-chrome-stable

XF86Launch1
    mpv --fullscreen /data/kommunism.webm
